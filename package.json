{
  "$schema": "https://json.schemastore.org/package",
  "name": "tukoda-nerdfontdecorator",
  "displayName": "Nerd Font Text Editor Decorator",
  "description": "Show Nerd Font icons in the text editor for escape sequences like '\\uE0A0' or '\\u{E0A0}'",
  "repository": {
    "type": "git",
    "url": "https://github.com/2coder/nerdfontdecorator.git"
  },
  "version": "0.1.0",
  "license": "MIT",
  "author": {
    "name": "Daniel Horn",
    "email": "daniel@2coder.de",
    "url": "https://2coder.de"
  },
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^18",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "unraw": "^3.0.0"
  }
}
